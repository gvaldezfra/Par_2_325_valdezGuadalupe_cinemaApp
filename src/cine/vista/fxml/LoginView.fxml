<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="cine.controlador.LoginController"
      alignment="CENTER" spacing="12" prefWidth="300">

    <Label text="Iniciar Sesión" style="-fx-font-size: 18px;"/>

    <TextField fx:id="txtEmail" promptText="Email"/>
    <PasswordField fx:id="txtPass" promptText="Contraseña"/>

    <Button text="Entrar" onAction="#login"/>

    <Hyperlink text="Crear cuenta" onAction="#irARegistro"/>

</VBox>

