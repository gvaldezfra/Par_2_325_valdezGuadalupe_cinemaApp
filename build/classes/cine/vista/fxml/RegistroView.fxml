<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="cine.controlador.RegistroController"
      alignment="CENTER"
      spacing="12"
      prefWidth="300">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Crear Cuenta" style="-fx-font-size: 18px;"/>

    <TextField fx:id="txtNombre"
               promptText="Nombre"
               maxWidth="250"/>

    <TextField fx:id="txtEmail"
               promptText="Email"
               maxWidth="250"/>

    <PasswordField fx:id="txtPass"
                   promptText="ContraseÃ±a"
                   maxWidth="250"/>

    <Button text="Registrarse"
            onAction="#registrar"
            maxWidth="200"/>

    <Hyperlink text="Ya tengo cuenta"
               onAction="#irALogin"/>

</VBox>


